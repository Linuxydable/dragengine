namespace Dragengine.ConversationSystem

pin Dragengine.Scenery



/**
 * A controller value in a conversation script.
 */
class ConversationControllerValue
	/** Index of the controller. */
	private var int pController
	/** Value of the controller. */
	private var float pValue
	
	
	
	/** Create a new conversation controller value. */
	public func new( int controller, float value )
		this.pController = controller
		this.pValue = value
	end
	
	
	
	/** Retrieves the index of the controller. */
	public func int getController()
		return this.pController
	end
	
	/** Retrieves the value of the controller. */
	public func float getValue()
		return this.pValue
	end
end
