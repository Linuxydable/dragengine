namespace Dragengine.ConversationSystem

pin Dragengine.Scenery



/**
 * \brief ID duration in a conversation script.
 */
class ConversationStrip
	private var StringID pID
	private var float pPause
	private var float pDuration
	
	
	
	/** Create a new conversation ID duration. */
	public func new( StringID id, float pause, float duration )
		this.pID = id
		this.pPause = DEMath.max( pause, 0.0 )
		this.pDuration = DEMath.max( duration, 0.0 )
	end
	
	
	
	/** Retrieves the id to apply during the strip. */
	public func StringID getID()
		return this.pID
	end
	
	/** Retrieves the pause in seconds before the strip starts. */
	public func float getPause()
		return this.pPause
	end
	
	/** Retrieves the duration in seconds of the strip. */
	public func float getDuration()
		return this.pDuration
	end
	
	
	
	/** Reads the strip from a file. */
	static public func ConversationStrip readFromFile( FileReader reader )
		var StringID id = StringID.new( reader.readString8() )
		var float pause = reader.readFloat()
		var float duration = reader.readFloat()
		return ConversationStrip.new( id, pause, duration )
	end
	
	/** Save game state. */
	public func void writeToFile( FileWriter writer )
		writer.writeString8( this.pID.toString() )
		writer.writeFloat( this.pPause )
		writer.writeFloat( this.pDuration )
	end
end
