namespace Dragengine.Gui.Events


/**
 * \brief Widget event listener interface.
 */
interface WidgetListener
	/** \brief Widget has been shown. */
	func void onWidgetShown( WidgetEvent event )
	
	/** \brief Widget has been hidden. */
	func void onWidgetHidden( WidgetEvent event )
	
	/** \brief Widget position changed. */
	func void onWidgetReposition( WidgetEvent event )
	
	/** \brief Widget size changed. */
	func void onWidgetResize( WidgetEvent event )
	
	/** \brief Widget is disposing. */
	func void onWidgetDispose( WidgetEvent event )
end
